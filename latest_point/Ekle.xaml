<UserControl x:Class="latest_point.Ekle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:latest_point"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="yeniEkle" Grid.ColumnSpan="2" NavigationUIVisibility="Hidden"/>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <RadioButton HorizontalAlignment="Center" Margin="0,55,0,0" x:Name="checkKitap"   Content="Kitap"   Checked="CheckKitap_Checked"/>
            <RadioButton HorizontalAlignment="Center" Margin="0,55,0,0" x:Name="checkVideo"   Content="Video"   Checked="CheckVideo_Checked" IsChecked="True"/>
            <RadioButton HorizontalAlignment="Center" Margin="0,55,0,0" x:Name="checkBasvuru" Content="Başvuru" Checked="CheckBasvuru_Checked"/>
        </StackPanel>
    </Grid>
</UserControl>
